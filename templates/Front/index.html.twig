{% endblock %}


{% block body %}

<!--==========================
  Header
  ============================-->
  <header id="header">

    <div class="container" id="customer-header" style="max-width:1300px;">
      <div class="logo float-left" style="display:flex;">
        {# <div style="padding-left: 10px;display: flex;align-items: center;">
          <h1>Sweeetch</h1>
        </div> #}
        <div>
          <a href="#header" class="scrollto"><img src="{{ asset('build/logo.png') }}" alt="" class="img-fluid"></a>
        </div>
      </div>

      <nav class="main-nav float-right d-none d-lg-block">
        <ul>
          <li class="active"><a href="{{ path('homepage') }}">Accueil</a></li>
          <!-- <li><a href="#about">Sweeetch</a></li>
          <li><a href="#why-us">Nos fonctionnalités</a></li> -->
          <li><a href="{{ path('offers_index') }}">Alternances</a></li>
          <li><a href="{{ path('studies_candidate_index') }}">Formations</a></li>
              
