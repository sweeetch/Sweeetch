{{ form_start(formPassword) }}

<div class="col-lg-6 col-md-12 col-sm-12 col-xs-12" style="margin:auto;">
    <div class="form-group">
        {{ form_label(formPassword.user.password.first, 'Mot de passe') }}
        {% if formPassword.user.password.first.vars.errors | length == 0 %}
        {{ form_widget(formPassword.user.password.first, {'label':'Email', 'attr' : { class: 'form-control' }} ) }}
        {% else %}
        {{ form_widget(formPassword.user.password.first, {'type':'password', 'label':'Mot de Passe', 'attr' : { class: 'form-control is-invalid' }} ) }}
        {% endif %}
        <div class="form-error">
            {{ form_errors(formPassword.user.password.first) }}
        </div> 
    </div>
    <div class="form-group">
        {{ form_label(formPassword.user.password.second, 'Répéter le mot de passe') }}
        {% if formPassword.user.password.second.vars.errors | length == 0 %}
        {{ form_widget(formPassword.user.password.second, {'label':'Email', 'attr' : { class: 'form-control' }} ) }}
        {% else %}
        {{ form_widget(formPassword.user.password.second, {'type':'password', 'label':'Répéter le mot de Passe', 'attr' : { class: 'form-control is-invalid' }} ) }} 
        {% endif %}
        <div class="form-error">
            {{ form_errors(formPassword.user.password.second) }}
        </div> 
    </div> 
    <div class="form-group"></div>
        <button class="btn btn-primary">Mettre à jour</button>
    </div>
</div>

{{ form_end(formPassword) }}
