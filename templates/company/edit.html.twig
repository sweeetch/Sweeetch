{% extends 'base-company.html.twig' %}

{% block title %} {{ parent() }} - Entreprises {% endblock %}

{% block body %}
    
<h1>Informations de l'Entreprise</h1>

{% for message in app.flashes('success') %}
  <div class="alert alert-success">
      {{ message }}
  </div>
{% endfor %}

{% for message in app.flashes('error') %}
  <div class="alert alert-danger">
      {{ message }}
  </div>
{% endfor %}

<div class="card card-primary">
  <div class="card-body body-row">

    <div class="card card-outline body-row">    
      <div class="card-body body-row">

        <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
          <li class="nav-item">
            <a class="nav-link edit-items" id="custom-content-below-home-tab" data-toggle="pill" href="#custom-content-below-home" role="tab" aria-controls="custom-content-below-home" aria-selected="true">Général</a>
          </li>
          <li class="nav-item">
            <a class="nav-link edit-items" id="custom-content-below-profile-tab" data-toggle="pill" href="#custom-content-below-profile" role="tab" aria-controls="custom-content-below-profile" aria-selected="false">Mot de Passe</a>
          </li>
        </ul>

        <div class="tab-content" id="custom-content-below-tabContent">
            <div class="tab-pane fade" id="custom-content-below-home" role="tabpanel" aria-labelledby="custom-content-below-home-tab">
              <br>
           {{ include('company/_form-edit.html.twig', {'button_label': 'Update'}) }}
            <div style="display:flex;justify-content:flex-end;">{{ include('company/_delete_form.html.twig') }}</div>
          </div>
          <div class="tab-pane fade" id="custom-content-below-profile" role="tabpanel" aria-labelledby="custom-content-below-profile-tab">
            <br>
            {{ include('company/_form-password.html.twig', {'button_label': 'Update'}) }} 
          </div>
        </div>

      </div>
    </div>

  </div>
</div>


{% endblock %}
