{# edit password #}

{{ form_start(formPassword) }}

<div class="col-lg-6 col-md-12 col-sm-12 col-xs-12" style="margin:auto;">
    <div class="form-group">        
        {{ form_label(formPassword.user.password.first, 'Mot de passe') }}
        {% if formPassword.user.password.first.vars.errors | length == 0 %}
        {{ form_widget(formPassword.user.password.first, {'label':'Entreprise', 'attr' : { class: 'form-control' }} ) }}
        {% else %}
        {{ form_widget(formPassword.user.password.first, {'label':'Entreprise', 'attr' : { class: 'form-control is-invalid' }} ) }}
        {% endif %}
        <div class="form-error">
            {{ form_errors(formPassword.user.password.first) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(formPassword.user.password.second, 'Repeter le mot de passe') }}
        {% if formPassword.user.password.second.vars.errors | length == 0 %}
        {{ form_widget(formPassword.user.password.second, {'label':'Entreprise', 'attr' : { class: 'form-control' }} ) }}
        {% else %}
        {{ form_widget(formPassword.user.password.second, {'label':'Entreprise', 'attr' : { class: 'form-control is-invalid' }} ) }}
        {% endif %}
        <div class="form-error">
            {{ form_errors(formPassword.user.password.second) }}
        </div>
    </div><br>
